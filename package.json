{
    "name": "@tmweb/vue-dropdown",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "build": "vue-cli-service build",
        "lint": "yarn run lint:eslint && yarn run lint:stylelint",
        "dev": "vue-cli-service serve",
        "lint:eslint": "eslint --ext .js,.vue --ignore-path .eslintignore .",
        "lint:fix": "yarn run lint:eslint --fix && yarn run lint:stylelint --fix",
        "lint:stylelint": "stylelint './**/*.{css,scss,vue}'"
    },
    "lint-staged": {
        "*.{js,vue}": "yarn lint:eslint",
        "*.{css,vue}": "yarn lint:stylelint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "core-js": "^3.6.5",
        "css-loader": "^3.5.2",
        "tailwindcss": "^1.3.4",
        "tippy.js": "^6.2.3",
        "vue": "^2.6.10",
        "vue-router": "^3.3.2"
    },
    "devDependencies": {
        "@ascendancyy/vue-cli-plugin-stylelint": "^1.1.2",
        "@vue/cli-plugin-babel": "^4.3.1",
        "@vue/cli-plugin-eslint": "^4.3.1",
        "@vue/cli-service": "^4.3.1",
        "@vue/eslint-config-prettier": "^6.0.0",
        "babel-eslint": "^10.0.1",
        "eslint": "^6.8.0",
        "eslint-import-resolver-webpack": "^0.12.1",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-vue": "^6.2.2",
        "husky": "^4.0.0",
        "lint-staged": "^10.0.0",
        "node-sass": "^7.0.0",
        "sass-loader": "^8.0.0",
        "stylelint": "^13.3.2",
        "stylelint-config-recommended-scss": "^4.2.0",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-order": "^4.0.0",
        "stylelint-scss": "^3.16.0",
        "vue-template-compiler": "^2.6.10"
    }
}
